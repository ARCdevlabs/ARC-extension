<Window x:Class="Input_Insulation.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Input_Insulation"
             mc:Ignorable="d" Height="415" Width="792"
            WindowStartupLocation="CenterScreen"
            ResizeMode="NoResize"
            Background="#FFEDEDED"
	        Foreground="#FF0F0202"
        >
    <Grid x:Name="stackpanel" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="339*"/>
            <ColumnDefinition Width="299*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0"
                        Margin="10,10,10,10"
                        >
            <GroupBox 
                        Header="Guide"
                        Background="WhiteSmoke"
                        Height="336" BorderBrush="Black"
                        >
                <StackPanel x:Name="GroupBoxContent" 
                        Orientation="Vertical">
                     <Label Content="Default Family of Insulation: Please load family before use this addin" />
                    <TextBlock Text="    - Beam: gIns_Frame-ver4.0" />
                    <TextBlock Text="    - Column: gIns_Column-ver4.0" />
                    <Label Content="H Shape                       ロ Shape" Width="182" FontWeight="Bold" />
                    <Image Source="/Input Insulation;component/Resource/ImageShape.png" 
                   Width="361" 
                   Height="200" 
                   Stretch="Uniform" />
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <StackPanel Margin="0,20,10,10"
                    Orientation="Vertical"
                    Grid.Column="1"
                    >

            <StackPanel 
                    Margin="20,10,10,10"
                    Orientation="Horizontal"
                    VerticalAlignment="Top" 
                    Grid.Column="1" 
                    HorizontalAlignment ="Stretch"
                    >
                <RadioButton
                        x:Name="Radiobtn_ColumnInsulation"  
                        Checked="Radiobtn_ColumnInsulation_Checked" 
						Width="76"
						Content="Column"
						Foreground="#FF0A0000"
						Height="26"
						VerticalAlignment="Center"
						Margin="30,10,10,10" />
                <RadioButton x:Name="RadioBtn_BeamInsolutation"
                        Checked="Radiobtn_BeamInsulation_Checked"                        
						Width="65"
						Content="Beam"
						Foreground="#FF0A0000"
						Height="26"
						VerticalAlignment="Center"
						Margin="0,10,10,10" />
                <RadioButton
                        x:Name="RadioBtn_HorizontalBeamInsulation"
                        Checked="RadioBtn_HorizontalBeamInsulation_Checked"
						Content="Horizontal Beam"
						Foreground="#FF0A0000"
						Height="26"
						VerticalAlignment="Center"
						Margin="0,10,0,10" 
                        Width="114" >

                </RadioButton>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top" 
                    HorizontalAlignment ="Stretch"
                    >
                <Grid x:Name="SubStackPanel" Margin="10" Width="336">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>

                    <Label 
                        Grid.Column="0" 
						HorizontalAlignment="Left"
						Content="Select Family:"
						Foreground="#FF0A0000"
						Height="26"
						VerticalAlignment="Center"
						Margin="10,10,10,10" />

                    <ComboBox	
                    Grid.Column="1" 
                        x:Name="Cbb_SelectTypeOfInsulation"
						HorizontalAlignment="Stretch"
						Foreground="Black" 
                        Background="White" 
                        Width="200"
						Height="30"
						VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        SelectedIndex="0">
                    </ComboBox>
                </Grid>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top" 
                    HorizontalAlignment ="Stretch"
                    >
                <Grid x:Name="SubStackPanel_2" Margin="10" Width="336">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Label 
                        Grid.Column="0" 
						HorizontalAlignment="Left"
						Content="Thickness:"
						Foreground="#FF0A0000"
						Height="26"
						VerticalAlignment="Center"
						Margin="10,10,10,10" />

                    <Grid Grid.Column="1">
                        <TextBox   
                        Grid.Column="1"     
                        x:Name="TbThickness"    
				        Width="200"
				        Height="30"
				        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                        VerticalContentAlignment="Center"
                        Foreground="Black" 
                        Background="White" 
                        Text="25" 
                        Focusable="True" 
                        AllowDrop="True" PreviewTextInput="TbThickness_PreviewTextInput"    
                        />
                    </Grid>
                </Grid>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top" 
                    HorizontalAlignment ="Stretch"
                    >
                <Grid x:Name="SubStackPanel_3" Margin="10" Width="336">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Label 
                        Grid.Column="0" 
						HorizontalAlignment="Left"
						Content="Shape:"
						Foreground="#FF0A0000"
						Height="26"
						VerticalAlignment="Center"
						Margin="10,10,10,15" />

                    <Grid Grid.Column="1">
                        <RadioButton
                        x:Name="ShapeType1"   
                        GroupName="ShapeGroup"
                        IsChecked="True"
						Width="76"
						Content="H Shape"
						Foreground="#FF0A0000"
						Height="26"
						VerticalAlignment="Center"
						Margin="10,10,10,0" />

                    </Grid>
                    <Grid Grid.Column="2">
                        <RadioButton
                        x:Name="ShapeType2"    
                        GroupName="ShapeGroup"
						Width="76"
						Content="ロ Shape"
						Foreground="#FF0A0000"
						Height="26"
						VerticalAlignment="Center"
						Margin="30,10,10,0" />
                    </Grid>
                </Grid>
            </StackPanel>

            <Button x:Name="ButtonInsulationColumn"
                    Margin="10,10,20,10"
                    Content= "Create Insulation"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Height="40" 
                    Width="200"
                    Click="OnCreateInsulationButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
