<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	AllowDrop="False"
	VerticalAlignment="Center"
	HorizontalAlignment="Center"
	WindowStyle="ThreeDBorderWindow"
	WindowStartupLocation="CenterScreen"
	OpacityMask="#FF530E60"
	Visibility="Visible"
	ContextMenuService.HasDropShadow="False"
	ResizeMode="NoResize"
	SizeToContent="Manual" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="#FFEDEDED"
	Foreground="#FF0F0202"
	MinHeight="470"
	MinWidth="460"
	Title="ARC-TOOL" Width="460" Height="300">
    <Grid x:Name="allgrid" Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="420"
                              Width="420"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Hàng này sẽ mở rộng để lấp đầy không gian -->
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0">
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment ="Stretch">
                <Label
					Content="DUỖI SHEET NUMBER :"
					FontWeight="Bold"
					FontSize="14"
					Foreground="#FF28080B"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="10,0,0,0"
					Width="183"
					Height="35" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment ="Stretch">
                <Label
					Content="Prefix:"
					Foreground="#FF00050A"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
                    Margin="10,0,0,0"
					Width="44"
					Height="24" />
                <Label
					Content="Suffix:"
					Foreground="#FF110111"
					HorizontalAlignment="Right"
					VerticalAlignment="Center"
                    Margin="190,0,0,0"
					Width="44"
					Height="24" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <TextBox
					x:Name="tien_to"
					TextAlignment="Center"
					TextWrapping="NoWrap"
					IsEnabled="True"
					BorderThickness="1,1,1,1"
					Foreground="#FF0A0000"
					Background="White"
					BorderBrush="#FF707070"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="10,10,10,10"
					Width="161"
					SelectionBrush="#FF7A7A7A"
					Text="A-" />
                <TextBox
					TextAlignment="Center"
					x:Name="text4"
					IsEnabled="False"
					Text="STT"
					BorderBrush="#FF000A11"
					BorderThickness="1,1,1,1"
					Foreground="#FF0A0000"
					Background="#FFE8E8E8"
					HorizontalAlignment="Left"
					Margin="10,10,10,10"
					Width="35"
					 />
                <TextBox
					x:Name="hau_to"
					TextAlignment="Center"
					RenderTransformOrigin="0.5,2.55"
					Text=""
					AllowDrop="False"
					Background="White"
					Foreground="#FF0A0000"
					BorderBrush="#FF707070"
					BorderThickness="1,1,1,1"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="10,10,10,10"
					Width="161"
					
					SelectionBrush="#FF7A7A7A"
					OverridesDefaultStyle="False" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Grid x:Name="grid_phu_1" Width = "420">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label 
						FontSize="13"
						Grid.Column="0"
						HorizontalAlignment="Left"
						Width="99"
						Content="Bắt đầu từ số:"
						Foreground="#FF0A0000"
						Height="26"
						VerticalAlignment="Center"
						Margin="10,10,10,10" />
                    <TextBox
						x:Name="so_bat_dau"
						Text="1"
						Grid.Column="1"
						TextAlignment="Left"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						Margin="10,10,10,10"
						Width="62"
					
						SelectionBrush="#FF7A7A7A" />
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Grid x:Name="grid_phu_2" Width = "420">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="40*"/>
                    </Grid.ColumnDefinitions>

                    <Label
						FontSize="13"
						Content="Kiểu số:"
						Foreground="#FF0A0000"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
                        Grid.Column="0"
						Margin="10,0,0,0"
						Width="81"
						Height="30" />

                    <ComboBox
						x:Name="kieu_so"
						Tag=""
						UseLayoutRounding="False"
						Text=""
						SelectedIndex="0"
                        Grid.Column="1"
						RenderTransformOrigin="0.4808,0.5"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						Margin="10,10,0,0"
						Width="62"
						
						HorizontalContentAlignment="Center">
                        <ComboBoxItem
							x:Name="mot"
							Content="1"
							HorizontalContentAlignment="Left">

                        </ComboBoxItem>
                        <ComboBoxItem
							x:Name="hai"
							Content="01"
							HorizontalContentAlignment="Left" />
                        <ComboBoxItem
							x:Name="ba"
							Content="001"
							HorizontalContentAlignment="Left"></ComboBoxItem>
                        <ComboBoxItem
							x:Name="bon"
							Content="0001"
							HorizontalContentAlignment="Left" />
                        <ComboBoxItem
							x:Name="nam"
							Content="00001"
							HorizontalContentAlignment="Left" />
                    </ComboBox>
                </Grid>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <Label
					FontSize="14"
					Content="TÙY CHỌN NÂNG CAO :"
					FontWeight="Bold"
                    Margin="10,0,0,0"
					HorizontalAlignment="Left"
					Width="169"
					Background="{x:Null}"
					Height="42"
					VerticalAlignment="Center"
					Foreground="#FF0A0000" />
                <Label
					Background="{x:Null}"
					Foreground="#FF0A0000"
					HorizontalAlignment="Left"

					Height="33"
					VerticalAlignment="Center"
                   Margin="10,0,0,0"
					Content="Cần xác định vị trí số thứ tự trong Sheet number cũ bằng cách nhập " />
                <Label
					Grid.Column="0"
					Grid.Row="0"
					HorizontalAlignment="Left"
					Background="{x:Null}"
					Foreground="#FF0A0000"
					Height="31"
					VerticalAlignment="Center"
                   Margin="10,0,0,0"
					Content="ký tự đứng trước hoặc sau số cần thay đổi (nếu có):" />

            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment ="Stretch">
                <Label
					Content="Prefix:"
					Foreground="#FF00050A"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
                    Margin="10,0,0,0"
					Width="44"
					Height="24" />
                <Label
					Content="Suffix:"
					Foreground="#FF110111"
					HorizontalAlignment="Right"
					VerticalAlignment="Center"
                    Margin="190,0,0,0"
					Width="44"
					Height="24" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment ="Stretch">
                <TextBox
					x:Name="Prefix"
					Background="White"
					BorderBrush="#FF707070"
					Foreground="#FF00050A"
					BorderThickness="1,1,1,1"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="10,10,10,10"
					Width="161"
					
					OverridesDefaultStyle="False"
					HorizontalContentAlignment="Center"
					SelectionBrush="#FF7A7A7A" />
                <TextBox
					TextAlignment="Center"
					x:Name="text4_Copy"
					IsEnabled="False"
					Text="STT"
					Background="#FFE8E8E8"
					BorderBrush="#FF00050A"
					Foreground="#FF00050A"
					BorderThickness="1,1,1,1"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="10,10,10,10"
					Width="35"
					 />
                <TextBox
					x:Name="Suffix"
					Background="White"
					BorderBrush="#FF707070"
					Foreground="#FF00050A"
					BorderThickness="1,1,1,1"
					VerticalAlignment="Center"
					
					Width="161"
					HorizontalAlignment="Right"
					Margin="10,10,10,10"
					HorizontalContentAlignment="Center"
					SelectionBrush="#FF7A7A7A" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Grid.Column="0" 
                        HorizontalAlignment ="Stretch"
                        >
                <Grid x:Name="grid_phu_3" Width = "420">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button
					x:Name="ApplyToView"
					RenderTransformOrigin="0.3692,0.5"
                    Grid.Column="0"
					Foreground="#FF0A0000"
					BorderBrush="#FF707070"
					Background="#FFDDDDDD"
					Content="APPLY TO REVIT"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Margin="10,10,10,10"
					Width="124"
					Height="29" />
                <Button
					x:Name="OK"
                    Grid.Column="1"
					Content="CHECK VAR"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Margin="10,10,10,10"
					Width="128"
					Height="29"
					BorderBrush="#FF707070"
					Background="#FFDDDDDD" />
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>